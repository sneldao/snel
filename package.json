{
  "name": "snel",
  "version": "1.0.0",
  "description": "AI-Powered Cross-Chain DeFi Assistant",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "make dev",
    "all-dev": "make all-dev",
    "backend": "make backend-dev",
    "frontend": "make frontend-dev",
    "telegram": "make telegram-dev",
    "install-deps": "make install",
    "clean": "make clean",
    "build": "npm run build --workspace=frontend",
    "test": "npm run test --workspace=frontend && npm run test --workspace=backend",
    "lint": "npm run lint --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
