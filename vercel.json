{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 90,
                "memory": 1024,
                "runtime": "python3.12",
                "handler": "app",
                "includeFiles": [
                    "api.py",
                    "kyber.py",
                    "configure_logging.py",
                    "app/**",
                    "src/**",
                    "requirements.txt"
                ],
                "excludeFiles": [
                    "**/*.test.py",
                    "**/*_test.py",
                    "test_*.py",
                    "tests/**",
                    ".pytest_cache/**",
                    "__pycache__/**",
                    ".coverage",
                    ".env.test",
                    "test_redis_simple.py",
                    "test_redis_ssl.py",
                    "test_redis_upstash.py"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "regions": [
        "iad1"
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": ".",
        "PYTHONIOENCODING": "utf-8",
        "QUICKNODE_ENDPOINT": "https://api.kyberswap.com",
        "REDIS_URL": "${REDIS_URL}",
        "MORALIS_API_KEY": "${MORALIS_API_KEY}",
        "ALCHEMY_KEY": "${ALCHEMY_KEY}",
        "COINGECKO_API_KEY": "${COINGECKO_API_KEY}"
    }
}