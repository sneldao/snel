{
    "version": 2,
    "builds": [
        {
            "src": "api.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 90,
                "memory": 1024,
                "runtime": "python3.12",
                "handler": "app",
                "includeFiles": [
                    "kyber.py",
                    "configure_logging.py",
                    "requirements.txt",
                    "app/**"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "regions": [
        "iad1"
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": ".",
        "PYTHONIOENCODING": "utf-8",
        "QUICKNODE_ENDPOINT": "https://api.kyberswap.com",
        "MORALIS_API_KEY": "${MORALIS_API_KEY}",
        "REDIS_URL": "https://touched-crab-18970.upstash.io",
        "UPSTASH_REDIS_TOKEN": "${UPSTASH_REDIS_TOKEN}"
    }
}